    </servlet>
    <servlet-mapping>
        <servlet-name>shoppingCartController</servlet-name>
        <url-pattern>/shopping</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>productDetailController</servlet-name>
        <servlet-class>controller.productDetailController</servlet-class>
    </servlet>
    <servlet-mapping>
